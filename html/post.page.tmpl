{{template "base" .}}

{{define "title"}}{{.PageTitle}}{{end}}

{{define "body"}}
<body id="post">
    <header>
        <h1 class="text-2xl font-bold">{{.Title}}</h1>
        <p class="font-bold">{{.PublishAt}} on <a href="/{{.Username}}">{{.Username}}'s blog</a></p>
    </header>
    <article>
        <ul>
            {{range .Items}}
                {{if .IsURL}}
                <li><a href="{{.URL}}">{{.Value}}</a></li>
                {{end}}

                {{if .IsText}}
                <li>{{.Value}}</li>
                {{end}}

                {{if .IsBlock}}
                <li><blockquote>{{.Value}}</blockquote></li>
                {{end}}

                {{if .IsHeaderOne}}
                <li><h2 class="text-xl font-bold">{{.Value}}</h2></li>
                {{end}}

                {{if .IsHeaderTwo}}
                <li><h3 class="text-lg font-bold">{{.Value}}</h3></li>
                {{end}}
            {{end}}
        </ul>
    </article>
</body>
{{template "footer" .}}
{{end}}
