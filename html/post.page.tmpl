{{template "base" .}}

{{define "title"}}{{.PageTitle}}{{end}}

{{define "meta"}}
<meta name="description" content="{{.Description}}" />
{{end}}

{{define "body"}}
<body id="post">
    <header>
        <h1 class="text-2xl font-bold">{{.Title}}</h1>
        <p class="font-bold">{{.PublishAt}} on <a href="/{{.Username}}">{{.Username}}'s blog</a></p>
        {{if .Description}}<div class="my font-italic">{{.Description}}</div>{{end}}
    </header>
    <article>
        {{template "list" .}}
    </article>
</body>
{{template "footer" .}}
{{end}}
