{{template "base" .}}

{{define "title"}}{{.PageTitle}}{{end}}

{{define "body"}}
<body id="collection">
    <header>
        <h1 class="text-2xl font-bold">{{.Username}}</h1>
    </header>
    <div class="posts">
        {{range .Posts}}
        <article>
            <div class="text-xl font-bold"><a href="{{.URL}}">{{.Title}}</a></div>
            <div class="text-lg">{{.PublishedAt}}</div>
        </article>
        {{end}}
    </div>
    {{template "footer" .}}
</body>
{{end}}
