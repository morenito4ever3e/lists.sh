{{template "base" .}}

{{define "title"}}{{.PageTitle}}{{end}}

{{define "meta"}}
<meta name="description" content="{{.Bio}}" />
{{end}}

{{define "body"}}
<body id="collection">
    <header>
        <h1 class="text-2xl font-bold">{{.Username}}</h1>
        <a href="{{.Username}}/rss">rss</a>
        {{if .Bio}}<p>{{.Bio}}</p>{{end}}
        <hr />
    </header>
    <main class="posts">
        {{range .Posts}}
        <article>
            <div class="flex items-center">
                <div class="font-italic text-sm post-date">{{.PublishAt}}</div>
                <div class="text-lg font-bold flex-1"><a href="{{.URL}}">{{.Title}}</a></div>
            </div>
        </article>
        {{end}}
    </main>
    {{template "footer" .}}
</body>
{{end}}
