{{template "base" .}}

{{define "title"}}transparency -- lists.sh{{end}}

{{define "meta"}}
<meta name="description" content="full transparency of analytics and cost at lists.sh" />
{{end}}

{{define "body"}}
<header>
    <h1 class="text-2xl font-bold">Transparency</h1>
    <hr />
</header>
<main>
    <section>
        <article>
            <h2 class="text-lg font-bold">Total users</h2>
            <div>{{.TotalUsers}}</div>
        </article>
        <article>
            <h2 class="text-lg font-bold">Total posts</h2>
            <div>{{.TotalPosts}}</div>
        </article>
        <article>
            <h2 class="text-lg font-bold">New users in the last month</h2>
            <div>{{.UsersLastMonth}}</div>
        </article>
        <article>
            <h2 class="text-lg font-bold">New posts in the last month</h2>
            <div>{{.PostsLastMonth}}</div>
        </article>
    </section>

    <section>
        <h2 class="text-lg font-bold">Service maintenance costs</h2>
        <ul>
            <li>Server $5.00/mo</li>
            <li>Domain name $3.25/mo</li>
            <li>Programmer $0.00/mo</li>
        </ul>
    </section>
</main>
{{template "marketing-footer" .}}
{{end}}
